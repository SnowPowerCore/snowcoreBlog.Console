<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.FileProviders.Embedded" Version="8.0.4" />
    <PackageReference Include="Fody" Version="6.8.0">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="ConfigureAwait.Fody" Version="3.3.2" />
    <PackageReference Include="Microsoft.Extensions.Http.Polly" Version="8.0.4" />
    <PackageReference Include="Polly" Version="8.3.1" />
  </ItemGroup>

  <ItemGroup>
    <None Update="**/FodyWeavers.*" Visible="false" />
    <ContentWithTargetPath Include="Config\**">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <TargetPath>Config\%(RecursiveDir)\%(Filename)%(Extension)</TargetPath>
    </ContentWithTargetPath>
    <ContentWithTargetPath Include="Resources\**">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <TargetPath>Resources\%(RecursiveDir)\%(Filename)%(Extension)</TargetPath>
    </ContentWithTargetPath>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Config\*.json" />
    <EmbeddedResource Include="Resources\*.json" />
    <EmbeddedResource Include="appsettings.json" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Steps\Launch\AfterUpdate\" />
    <Folder Include="Steps\Launch\FirstTime\" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference
      Include="..\snowcoreBlog.Universal\UniversalModules\LocalStorage\snowcoreBlog.LocalStorage.csproj" />
    <ProjectReference
      Include="..\snowcoreBlog.Universal\UniversalModules\ResourceLoading\snowcoreBlog.ResourceLoading.csproj" />
    <ProjectReference
      Include="..\snowcoreBlog.Universal\UniversalModules\ConsoleHandling\snowcoreBlog.ConsoleHandling.csproj" />
    <ProjectReference
      Include="..\snowcoreBlog.Universal\UniversalModules\VersionTracking\snowcoreBlog.VersionTracking.csproj" />
    <ProjectReference
      Include="..\snowcoreBlog.Universal\UniversalModules\ApplicationLaunch\snowcoreBlog.ApplicationLaunch.csproj" />
    <ProjectReference
      Include="..\snowcoreBlog.Universal\UniversalModules\TelemetryHandling\snowcoreBlog.TelemetryHandling.csproj" />
    <ProjectReference
      Include="..\snowcoreBlog.Universal\UniversalModules\HttpClientInterception\snowcoreBlog.HttpClientInterception.csproj" />
  </ItemGroup>

</Project>